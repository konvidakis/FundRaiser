<div class="row justify-content-center">
    @foreach (var item in Model)

    {
    <div class="card m-3" style="width: 18rem;">

        You will get a reward with title "@item.RewardOption.Title" because you contributed with "@item.RewardOption.AmountRequired" €
        <img class="card-img-top img-fluid img-thumbnail justify-content-center" style="height:200px; width:auto" src="@Html.DisplayFor(modelItem => item.ProjectOption.Logo)" alt="Card image cap">
        <div class="card-body">
            <div style="height:38%">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.ProjectOption.Title)</h5>
