            <div style="height:2%">
                <hr class="m-1" />
            </div>
            <div style="height:48%">
                <p class="card-text te">Amount pledged: @Html.DisplayFor(modelItem => item.ProjectOption.AmountPledged)</p>
                <p class="card-text te">Goal: @Html.DisplayFor(modelItem => item.ProjectOption.SetGoal)</p>
                <p class="card-text te">End Date: @Html.DisplayFor(modelItem => item.ProjectOption.EndDate)</p>
                <a class="btn btn-primary" asp-controller="ProjectPage" asp-action="Details" asp-route-id="@item.ProjectOption.ProjectId">View Details</a>
            </div>
        </div>
    </div>

    }
