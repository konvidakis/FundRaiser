@using FundRaiser.Model
@model IEnumerable<FundRaiser.Options.ProjectOption>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-success">Available Projects</h3>
<hr />
<form asp-action="Index">
    <div class="row m-2">
        <div class="input-group col-lg-6 col-md-12 mb-2">
            <label for="inputTitleSearch" class="m-2">Find projects by Title</label><br />
            <input id="inputTitleSearch" type="text" name="searchString" class="form-control rounded" placeholder="Enter project title" aria-label="Search"
                   aria-describedby="search-addon" />
            <button type="submit" class="btn btn-outline-primary ml-1">search</button>
        </div>

        <div class="input-group col-lg-6 col-md-12 mb-2">
            <label for="inputCategory" class="m-2">Filter projects by Category</label><br />
            <select id="inputCategory" asp-items="Html.GetEnumSelectList<Category>()" name="category" class="form-control rounded">
                <option selected disabled>Please select category</option>
            </select>
            <button type="submit" value="Filter" class="btn btn-outline-primary ml-1">Filter</button>
        </div>
    </div>
</form>
<div class="row justify-content-center">
    @foreach (var item in Model)

    {
        <div class="card m-3" style="width: 18rem;">            

            <img class="card-img-top img-fluid img-thumbnail justify-content-center" style="height:200px; width:auto" src="/img/logo/@Html.DisplayFor(modelItem => item.Logo)" alt="Card image cap">
            <div class="card-body">
                <div style="height:38%">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text te">@Html.DisplayFor(modelItem => item.Description)</p>
                    <p class="card-text te">Category: @Html.DisplayFor(modelItem => item.Category)</p>
                </div>
                <div style="height:2%">
                    <hr class="m-1" />
                </div>
                <div style="height:48%">
                    <p class="card-text te">Amount pledged: @Html.DisplayFor(modelItem => item.AmountPledged)</p>
                    <p class="card-text te">Goal: @Html.DisplayFor(modelItem => item.SetGoal)</p>
                    <p class="card-text te">End Date: @Html.DisplayFor(modelItem => item.EndDate)</p>
                    <a class="btn btn-primary" asp-controller="ProjectPage" asp-action="Details" asp-route-id="@item.ProjectId">View Details</a>
                </div>
            </div>
        </div>

        }
    </div>
<hr />
<br />
