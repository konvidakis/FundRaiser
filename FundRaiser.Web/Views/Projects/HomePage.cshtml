@model IEnumerable<FundRaiser.Options.ProjectOption>

@{
    ViewData["Title"] = "Home Page";
}


<br />
<h3 class="text-success">Trending Projects</h3>
<hr />
<div class="row justify-content-center">
    @foreach (var item in Model)

    {
        <div class="card m-3" style="width: 18rem;">

            <img class="card-img-top img-fluid img-thumbnail justify-content-center" style="height:200px; width:auto" src="/img/logo/@Html.DisplayFor(modelItem => item.Logo)" alt="Card image cap">
            <div class="card-body">
                <div style="height:38%">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text te">@Html.DisplayFor(modelItem => item.Description)</p>
                    <p class="card-text te">Category: @Html.DisplayFor(modelItem => item.Category)</p>
                </div>
                <div style="height:2%">
                    <hr class="m-1" />
                </div>
                <div style="height:48%">
                    <p class="card-text te">Amount pledged: @Html.DisplayFor(modelItem => item.AmountPledged)</p>
                    <p class="card-text te">Goal: @Html.DisplayFor(modelItem => item.SetGoal)</p>
                    <p class="card-text te">End Date: @Html.DisplayFor(modelItem => item.EndDate)</p>
                    <a class="btn btn-primary" asp-controller="ProjectPage" asp-action="Details" asp-route-id="@item.ProjectId">View Details</a>
                </div>
            </div>
        </div>

    }
</div>
<hr />
<br />
