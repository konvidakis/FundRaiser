@model FundRaiser.Web.Models.ProjectPostWithImageViewModel
@{
    ViewData["Title"] = "Post Update";
}


<h3 class="text-info">Create a status update</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectPostOption.Text" class="control-label">Input Status Update</label>
                <textarea asp-for="ProjectPostOption.Text" class="form-control" rows="5"></textarea>
                <span asp-validation-for="ProjectPostOption.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectPostImage" class="control-label">Upload image(Optional)</label>
                <input asp-for="ProjectPostImage" class="form-control" id="ProjectPostImage" />
                <span class="text-danger"></span>
            </div>
            <input asp-for="ProjectPostOption.ProjectId" class="form-control" value="@ViewBag.ProjectId" readonly hidden>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" data-toggle="modal" data-target="#PostModal" />
            </div>
        </form>
    </div>
</div>
